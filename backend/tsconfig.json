{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"rootDir": ".",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": { "@/*": ["*"] }
	},
	"include": ["**/*.ts"],
	"exclude": ["dist", "node_modules"]
}
